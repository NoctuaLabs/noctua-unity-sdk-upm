/* General */

.base {
    background-color: rgb(31, 35, 39);
    color: white;
    position:absolute;
}

.hide {
    display: none !important;
}

.err-box {
    padding-top: 10px;
    padding-right: 0;
    padding-bottom: 10px;
    padding-left: 0;
    width: 100%;
    height: 16px;
    align-items: center;
    justify-content: center;
}
.err-label {
    color: red;
    font-size: 10px;
    -unity-text-align: upper-left;
    white-space: normal;
    overflow: visible;
    flex-wrap: wrap;
    padding: 2px 0;
    margin: 0;
    width: 100%;
    max-width: 100%;
}

.unity-scroller--vertical {
    width: 4px;
    background-color: #2D3138;
}

/* End General */

/* Dialog */

.dialog-box {
    top: 12px;
    position: absolute;
    flex-direction: column;
    border-radius: 20px;
    width: 319px;
    height: 337px;
    border-width: 1px;
    align-items: center;
    padding: 14px;
    align-self: center;
}

.dialog-header {
    height: 24px;
    flex-direction: row;
    font-size: 12px;
    align-items: center;
    align-self: flex-start;
}

.dialog-title {
    margin-top: 0;
    font-size: 12px;
}

.dialog-back-button {
    margin-top:0;
    margin-right:14px;
    height:24px;
    width: 24px;
    flex-direction: column;
    border-width: 0;
    border-color: transparent;
    background-color: transparent;
    justify-content: flex-start;
    background-image: url("./Backicon.png");
    align-items: auto;
    background-position: center;
}

.dialog-close-button {
    margin-top:0px;
    margin-right:14px;
    height:24px;
    width: 24px;
    flex-direction: column;
    border-width: 0;
    border-color: transparent;
    background-color: transparent;
    justify-content: flex-start;
    background-image: url("./CloseIcon.png");
    align-items: auto;
    background-position: center;
}

.dialog-content {
    padding: 14px;
    margin-top: 15px;
    flex-direction: column;
    width: 300px;
}

.dialog-footer {
    position: absolute;
    bottom: 0;
    padding: 14px;
    width: 300px;
    margin-top: 10px;
    margin-bottom: 10px;
    align-items: center;
    justify-content: center;
}

.dialog-err-label {
    margin-top:10px;
    margin-bottom:10px;
    color: red;
    font-size: 10px;
}

/* End Dialog */


/* Button */

.button-highlight {
    background-color: rgb(59, 130, 246);
}

.button-normal {
    background-color: rgb(45, 49, 56);
}

.button-transparent {
    background-color: transparent;
    border-width: 0;
}

.button-with-border {
    border-radius: 5px;
    border-color: #3B82F6;
    border-width: 1px;
    background-color: transparent;
    color: #3B82F6;
}

.dialog-button {
    height: 40px;
    width: 100%;
    background-color: #3B82F6;
    border-width: 0 !important;
    border-color: transparent;
    padding-top: 14px;
    padding-right: 24px;
    padding-bottom: 14px;
    padding-left: 24px;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    border-bottom-left-radius: 10px;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
}

.dialog-button:disabled {
    background-color: #474B4E;
    border-width: 0 !important;
    border-color: transparent;
}

.dialog-button:hover {
    background-color: #5190F7;
    border-width: 0 !important;
    border-color: transparent;
}

.dialog-button:active {
    background-color: #295BAC;
    border-width: 0 !important;
    border-color: transparent;
}

.unity-button {
    border-width: 0 !important;
    border-color: transparent;
}

.noctua-back-button {
    flex-direction: column;
    border-width: 0;
    border-color: transparent;
    background-color: transparent;
    justify-content: flex-start;
    width: 24px;
    background-image: url("project://database/Assets/UI%20Toolkit/UnityThemes/UnityDefaultRuntimeTheme.tss?fileID=1169890249420208065&amp;guid=4f666f58f28c9584baab1db4dbae7c50&amp;type=3#arrow-left");
    align-items: auto;
}

/* End Button */

