/* Text Input */

/*
  The noctua-text-input class only control the position and flex
  The actual cosmetics are controlled by unity-base-* and unity-text-* classes below
  because their CSS behaviour is hard to override.
*/

.noctua-text-input {
    position: relative;
    flex-direction: column;
    margin-right: -10px;
    margin-left: -10px;
}

.unity-base-text-field__input {
    border-radius: 10px;
    margin-bottom: 10px;
    border-color: #474B4E;
    --unity-cursor-color: white;
}

.unity-base-text-field__input:hover {
    border-radius: 10px;
    margin-bottom: 10px;
    border-color: white;
    --unity-cursor-color: white;
}

.unity-base-text-field__input:active {
    border-radius: 10px;
    margin-bottom: 10px;
    border-color: white;
    --unity-cursor-color: white;
}

.unity-base-field__label {
    color: grey;
    margin-top: -2px; /* To make the label has the same position with the input text */
}

.unity-list-view__empty-label {
    display: none;
}

.unity-list-view__item:hover {
    background-color: transparent;
}

.unity-list-view__item:active {
    background-color: transparent;
}

.unity-list-view__item:focus {
    background-color: transparent;
}

.noctua-text-input #unity-text-input {
    padding-left: 10px;
    padding-right: 10px;
    height: 40px;
    margin-left: 10px;
    margin-right: 10px;
    background-color: transparent;
}

Label {
    border-width: 0 !important;
}

Label:hover {
    border-width: 0 !important;
}

.noctua-text-input Label {
    position: absolute;
    top: 12px;
    left: 10px;
    font-size: 12px;
    padding-left: 10px;
    background-color: transparent;
    border-width: 0 !important;
}

.custom-textfield-input-code #unity-text-input {
    position: relative;
    flex-direction: column;
    background-color: transparent;
    width: 37px;
    height: 47px;
    -unity-text-align: middle-center;
    font-size: 14px;
    border-width: 1px;
    border-color: #474B4E;
    border-radius: 6px;
}

/* End Text Input */
