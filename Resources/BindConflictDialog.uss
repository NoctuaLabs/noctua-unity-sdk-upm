.connect-conflict-dialog {
    flex-direction: column;
}

.noctua-logo-container {
    align-items: center;
    justify-content: center;
}

.player-box {
    margin-top: 38px;
    height: 55px;
    width: 219px;
    flex-direction: row;
    border-radius: 10px;
    padding: 10px;
    background-color: rgb(45, 49, 56);
    padding-top: 5px;
    padding-bottom: 5px;
    align-items: center;
}

.player-avatar {
    background-color: transparent;
    width: 36px;
    height: 36px;
    margin-left: 8px;
    margin-right: 8px;
    align-items: center;
    justify-content: center;
}

.player-text {
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    height: 100%;
    padding-left: 2%;
}

.player-label {
    font-size: 12px;
    -unity-text-align: middle-left;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0;
    margin: 0;
}

.credential-display-text {
    font-size: 12px;
    -unity-text-align: middle-left;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0;
    margin: 0;
}

.button-group {
    flex-direction: column;
    height: 40px;
    align-self: stretch;
    align-items: center;
}

.connect-conflict-information-container {
    margin-top: 1%;
    height: 40%;
    overflow: visible;
}

.connect-conflict-information-label {
    font-size: 14px;
    overflow: visible;
    flex-wrap: wrap;
    -unity-text-align: middle-center;
    white-space: normal;
    flex: 1;
}

.switch-account-button {
    width: 90%;
    height: 35px;
    border-width: 1px;
    border-radius: 5px;
    border-color: rgb(59, 130, 246);
}

.cancel-button {
    width: 90%;
    height: 35px;
    border-width: 1px;
    border-radius: 5px;
    border-color: rgb(59, 130, 246);
    color: rgb(59, 130, 246);
}
